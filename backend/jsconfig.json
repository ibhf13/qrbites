{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@validations/*": [
        "src/validations/*"
      ],
      "@tests/*": [
        "tests/*"
      ],
      "@seeders/*": [
        "tests/seeders/*"
      ],
      "@mocks/*": [
        "tests/fixtures/mocks/*"
      ],
      "@services/*": [
        "src/services/*"
      ]
    },
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "scripts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}