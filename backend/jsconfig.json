{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./src/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@routes/*": ["./src/routes/*"],
      "@utils/*": ["./src/utils/*"],
      "@config/*": ["./src/config/*"],
      "@services/*": ["./src/services/*"],
      "@tests/*": ["./src/tests/*"]
    },
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "checkJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "coverage"]
} 